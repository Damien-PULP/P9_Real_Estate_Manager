<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageButton
        android:id="@+id/fragment_detail_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_search_24"
        android:background="@color/colorTrans"/>

    <ImageButton
        android:id="@+id/fragment_detail_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/fragment_detail_search_button"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_edit_24"
        android:background="@color/colorTrans"/>

    <ImageButton
        android:id="@+id/fragment_detail_sell_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/fragment_detail_edit_button"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_attach_money_24"
        android:background="@color/colorTrans"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_detail_photos_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_edit_button"/>

    <TextView
        android:id="@+id/fragment_detail_type"
        android:text="House"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_photos_recycler_view"/>

    <TextView
        android:id="@+id/fragment_detail_sub_title_description"
        android:text="Description"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_type"/>

    <TextView
        android:id="@+id/fragment_detail_description"
        android:text="@string/medium_text"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_sub_title_description"
        android:layout_marginStart="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/fragment_detail_description">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:text="Surface"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_baseline_dimen_24" />

            <TextView
                android:id="@+id/fragment_detail_area"
                android:text="300m2"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/fragment_detail_nb_room"
                android:text="18 rooms"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>

            <TextView
                android:text="Pris"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
                />

            <TextView
                android:id="@+id/fragment_detail_pris"
                android:text="1.700.000"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:text="Location"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />

            <TextView
                android:id="@+id/fragment_detail_location"
                android:text="New - York, 993 , mega street 666 "
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_border"
                android:backgroundTint="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>